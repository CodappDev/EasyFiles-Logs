// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Log {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt      DateTime
  updatedAt      DateTime @updatedAt
  text           String
  type           String
  organizationId String
  userId         String?
  teamId         String?
  groupId        String?
  repositoryId   String?
  fileId         String?
}

model Access {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt      DateTime
  updatedAt      DateTime @updatedAt
  organizationId String
  userId         String
  userName       String
  userEmail      String
}

model Deletions {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt      DateTime
  updatedAt      DateTime @updatedAt
  organizationId String
  type           String
  userId         String?
  teamId         String?
  groupId        String?
  repositoryId   String?
  fileId         String?
  expiration     DateTime
}